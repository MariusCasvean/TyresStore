@model IList<TyresStore.Repository.Models.Basket>

@if (Model.Count > 0)
{
    <table class="table remove basket-table">
        <thead>
            <tr>
                <th>TyreId</th>
                <th>Description</th>
                <th>AddedDate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.TyreId</td>
                <td>@item.Description</td>
                <td>@item.AddedDate</td>
                <td class="delete-item">
                    <button type="button" class="btn btn-primary update-cart-button"
                            onclick="basketModel.deleteItem(@item.ID)">Delete item
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
