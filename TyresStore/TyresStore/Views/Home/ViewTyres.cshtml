@model IList<TyresStore.Repository.Models.Tyre>

@if (Model.Count > 0)
{
    <table class="table-tyres">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Season</th>
                <th>Article code</th>
                <th>Price</th>
                <th>
                
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tyre in Model)
            {
                <tr>
                    <td><div class="tableWidth">@tyre.Brand</div></td>
                    <td>@tyre.Season</td>
                    <td>@tyre.ArticleCode</td>
                    <td>@tyre.Price</td>                    
                    <td class="button-select">
                        <button type="button" class="btn btn-primary update-cart-button" onclick="mainModel.updateCart(@tyre.ID, '@tyre.Brand')">Add to cart <span class="glyphicon glyphicon-plus-sign"></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}