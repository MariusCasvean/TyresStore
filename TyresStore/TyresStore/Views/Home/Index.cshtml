@model IList<TyresStore.Repository.Models.Vehicle>


@{
    ViewBag.Title = "Home Page";
}

<link href="@Url.Content("/Content/MyStyle.css")" rel="stylesheet" type="text/css" />

<table class="table table-vehicle">
    <thead>
        <tr class="table-head-vehicle">
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Year</th>
            <th class="optionalColumns">Color</th>
            <th class="optionalColumns">Price</th>
            <th class="optionalColumns">Power</th>
            <th class="optionalColumns">SpeedLimit</th>
            <th class="optionalColumns">Transmission</th>
            <th class="optionalColumns">Consumption</th>
            <th>ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Manufacturer</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Year</td>
                <td class="optionalColumns">@vehicle.Color</td>
                <td class="optionalColumns">@vehicle.Price</td>
                <td class="optionalColumns">@vehicle.Power</td>
                <td class="optionalColumns">@vehicle.SpeedLimit</td>
                <td class="optionalColumns">@vehicle.Transmission</td>
                <td class="optionalColumns">@vehicle.Consumption</td>
                <td>@vehicle.ID</td>
                <td class="button-select">
                    <button type="button" class="btn btn-primary select-vehicle-button" onclick="mainModel.loadTyres(@vehicle.ID)">Select <span class="glyphicon glyphicon-ok-sign"></span></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="tyres-table">
    <div class="header-table"> <span class="tyres-title">Tyres</span></div>
    <div class="table-content"></div>
</div>


